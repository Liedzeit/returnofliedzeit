---
layout: layouts/evensimpler.njk
pagination:
  data: collections.tagNameList
  size: 1
  alias: tag
permalink: "/tags/{{ tag | slugify }}/{% if pagination.pageNumber > 1 %}page/{{ pagination.pageNumber }}/{% endif %}"
eleventyComputed:
  title: "Letzte {{ tag }} Posts{% if pagination.pageNumber > 1 %} (Seite {{ pagination.pageNumber }}){% endif %}"
motto: ""
source: ""
---

<ul class="no-bullets">
  {%- set posts = collections[tag] | reverse -%}
  {%- set startIndex = (pagination.pageNumber - 1) * 20 -%}
  {%- set endIndex = startIndex + 20 -%}
  {%- set pagePosts = posts.slice(startIndex, endIndex) -%}
  
  {%- for post in pagePosts -%}
    {%- if post.data.tags and ("levity" in post.data.tags) -%}
      <li><a href="{{ post.url | url}}"><h5>{{ post.data.title }}</h5></a>
        <small class="text-muted">{{ post.date | readableDate }}</small>
      </li>
      {% excerpt post %} <a href="{{ post.url | url}}"> [weiter]</a>
    {%- endif -%}
  {%- endfor -%}
</ul>

{%- if pagination.href.previous or pagination.href.next -%}
<div>
  {%- if pagination.href.previous -%}
    <a href="{{ pagination.href.previous }}">« Neuere</a>
  {%- endif -%}
  {%- if pagination.href.previous and pagination.href.next -%} | {%- endif -%}
  {%- if pagination.href.next -%}
    <a href="{{ pagination.href.next }}">Ältere »</a>
  {%- endif -%}
</div>
{%- endif -%}

<p><a href="/">Zurück zur Startseite</a></p>


